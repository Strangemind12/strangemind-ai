# Strangemind AI environment variables

# WhatsApp & Gupshup API keys
GUPSHUP_API_KEY=your_gupshup_api_key_here
BOT_NAME=Strangemind AI

# OpenAI API key for advanced AI features (optional)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Atlas connection URI (replace username/password/db)
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/mydb?retryWrites=true&w=majority

# Admin phone number for bot management
ADMIN_PHONE=+234XXXXXXXXXX

# Feature toggles (true/false)
ENABLE_PREMIUM=true
ENABLE_GAMIFIED_MODE=true
ENABLE_MOVIE_ENGINE=true
ENABLE_SPAM_FILTER=true
WELCOME_ON_MENTION=true
ENABLE_REFERRAL_SYSTEM=true

# Movie engine specific APIs
MOVIE_SCRAPER_API=https://your-koyeb-api.com/search
TMDB_API_KEY=your_tmdb_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Game economy settings
GAME_XP_PER_MESSAGE=5
GAME_COIN_PER_MESSAGE=2
GAME_DAILY_COIN_LIMIT=500
GAME_BOX_NAME=Strangemind Vault
GAME_MIN_WITHDRAWAL=1000
GAME_WITHDRAWAL_ENABLED=true
GAME_WITHDRAWAL_METHOD=airtime
GAME_WITHDRAWAL_WEBHOOK=https://your-server.com/api/withdraw

# Referral bonuses (in coins)
REFERRAL_BONUS_REFERRER=100
REFERRAL_BONUS_NEW_USER=50

# Pricing in Nigerian Naira
NIGERIA_MONTHLY_PRICE=5000

# Server port (optional, default 5000)
PORT=5000
